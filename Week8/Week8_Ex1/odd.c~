#include <stdio.h>

int main()
{
  printf("Program to check if a number is even or odd\n");
  int number;

  printf("Please enter a number: ");
  scanf("%d", &number);
  printf("You entered: %d\n", number);
  
  if (number %2 !=0)
  {
    printf("This is an odd number");
  }
  else
  {
    printf("This is an even number\n");
  }
  return 0;
}
