#lang racket

;;; Program to calculate factorial of an integer number
;;WORKS

(define (factorial n)
  ;;If the input is 0, the factorail will be 1, as a rule
    (if (= n 0)
        1
      ;;The inputed number - 1, then multipled by number
      ;; the function is called again with the new value and
      ;; loops until the n = 0
      (* n (factorial (- n 1)))))