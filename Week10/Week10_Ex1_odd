#lang racket

;;;Program to check if a number is even or odd
;;WORKS

; Creating a function called odd-or-even and it accepts
; a variable n
(define(odd-or-even n) 
  ;Setting a condition where..
  (cond 
    ; If the number is not divisible by 2 (no remainder) 
    ; it is and odd number, else its even
    [(not(= (modulo n 2) 0))"Is odd"]
    [else "Is even"]))